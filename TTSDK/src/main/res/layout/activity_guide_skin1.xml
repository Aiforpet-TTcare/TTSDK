<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_guide_skin1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_af000000"
    android:visibility="gone">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="664dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:orientation="vertical">

            <TextView
                style="@style/Font_Medium_16"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineHeight="26dp"
                android:textColor="#191919"
                android:textSize="19dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_marginTop="22dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/round_radius_17_f2f2f2">


                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/guide_skin1_check"
                        android:background="@drawable/v4_common_check_check_on" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="23dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/guide_skin1_img"
                            android:background="@drawable/v4_dog_skin_1"/>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="6dp">

                            <TextView
                                style="@style/Font_Bold_16"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/v4_pop_skin_2"
                                android:textColor="@color/color_191919"/>

                            <TextView
                                style="@style/Font_Regular_10"
                                android:layout_gravity="center_vertical"
                                android:text="@string/v4_pop_skin_3"
                                android:textColor="@color/color_898989"/>

                        </LinearLayout>





                    </LinearLayout>



                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/handloading1_skin"
                        android:layout_width="60dp"
                        android:layout_height="60.7dp"
                        app:lottie_imageAssetsFolder="images"
                        app:lottie_fileName="han.json"
                        app:lottie_autoPlay="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="48dp"/>

                </RelativeLayout>



                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp">



                </RelativeLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_marginTop="15dp">



            </LinearLayout>









            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp">




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_radius_17_e9e9e9">


                <TextView
                    style="@style/Font_Bold_14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/pop_flash_txt_guide"
                    android:layout_marginLeft="20dp"/>


                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="28dp"
                    android:background="@drawable/v4_btn_toggle_on"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0"/>


            </LinearLayout>



            <TextView
                style="@style/Font_Bold_15"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_centerHorizontal="true"
                android:lineHeight="21dp"
                android:gravity="center"
                android:textColor="@color/color_191919"
                android:id="@+id/guide_skin1_txt"
                android:background="@drawable/round_radius_15_ffffff"/>





        </LinearLayout>







    </RelativeLayout>




</RelativeLayout>


