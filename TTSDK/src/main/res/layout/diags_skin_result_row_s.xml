<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/card_row1"
            android:layout_alignBottom="@id/card_row1"
            android:background="@drawable/sample" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/card_row1"
            android:padding="@dimen/v_20dp">


            <RelativeLayout
                android:id="@+id/row_1_question"
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_24dp"
                android:layout_marginTop="@dimen/v_24dp"
                android:layout_marginLeft="@dimen/v_26dp">


                <TextView
                    android:id="@+id/row_title"
                    style="@style/Font_Bold_16"
                    android:textSize="@dimen/v_16dp"
                    android:layout_height="@dimen/v_24dp"
                    android:gravity="center_vertical"
                    android:textColor="#191919"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/v_24dp"
                    android:orientation="horizontal"
                    android:id="@+id/row_question"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/row_title">

                    <ImageView
                        android:layout_width="@dimen/v_18dp"
                        android:layout_height="@dimen/v_19dp"
                        android:background="@drawable/v4_home_icon5"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/v_3dp"
                        android:layout_marginRight="@dimen/v_14dp"/>



                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/v_26dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/row1_cardview"
                        android:layout_width="@dimen/v_60dp"
                        android:layout_height="@dimen/v_60dp"
                        android:shape="ring"
                        app:cardBackgroundColor="@color/color_ffffff"
                        android:background="@color/color_ffffff"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="@dimen/v_17dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/row1_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/row1_image_loading"
                            android:layout_width="@dimen/v_60dp"
                            android:layout_height="@dimen/v_60dp"
                            android:layout_gravity="center" />

                    </com.google.android.material.card.MaterialCardView>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/v_12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Font_Medium_14"
                            android:textSize="@dimen/v_12dp"
                            android:layout_height="@dimen/v_18dp"
                            android:gravity="center_vertical"
                            android:id="@+id/row1_t1"
                            android:textColor="#717171"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/v_2dp">

                            <TextView
                                android:id="@+id/row_1_level"
                                style="@style/Font_SF_18"
                                android:textColor="#ff452b"
                                android:textSize="@dimen/v_20dp" />

                            <TextView
                                android:id="@+id/row_1_level_unit"
                                style="@style/Font_SF_18"
                                android:layout_marginLeft="1dp"
                                android:text="%"
                                android:textColor="#ff452b"
                                android:layout_gravity="bottom"
                                android:textSize="@dimen/v_12dp"
                                android:layout_marginBottom="1dp"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/row2_cardview"
                        android:layout_width="@dimen/v_60dp"
                        android:layout_height="@dimen/v_60dp"
                        android:shape="ring"
                        app:cardBackgroundColor="@color/color_ffffff"
                        android:background="@color/color_ffffff"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="@dimen/v_17dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/row2_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/row2_image_loading"
                            android:layout_width="@dimen/v_60dp"
                            android:layout_height="@dimen/v_60dp"
                            android:layout_gravity="center" />

                    </com.google.android.material.card.MaterialCardView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/v_12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Font_Medium_14"
                            android:textSize="@dimen/v_12dp"
                            android:layout_height="@dimen/v_18dp"
                            android:gravity="center_vertical"
                            android:id="@+id/row2_t1"
                            android:textColor="#717171"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/v_2dp">

                            <TextView
                                android:id="@+id/row_2_level"
                                style="@style/Font_SF_18"
                                android:textColor="#ff452b"
                                android:textSize="@dimen/v_20dp" />

                            <TextView
                                android:id="@+id/row_2_level_unit"
                                style="@style/Font_SF_18"
                                android:layout_marginLeft="1dp"
                                android:text="%"
                                android:textColor="#ff452b"
                                android:layout_gravity="bottom"
                                android:textSize="@dimen/v_12dp"
                                android:layout_marginBottom="1dp"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/v_24dp"
                android:layout_marginTop="@dimen/v_16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/row3_cardview"
                        android:layout_width="@dimen/v_60dp"
                        android:layout_height="@dimen/v_60dp"
                        android:shape="ring"
                        app:cardBackgroundColor="@color/color_ffffff"
                        android:background="@color/color_ffffff"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="@dimen/v_17dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/row3_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/row3_image_loading"
                            android:layout_width="@dimen/v_60dp"
                            android:layout_height="@dimen/v_60dp"
                            android:layout_gravity="center" />

                    </com.google.android.material.card.MaterialCardView>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/v_12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Font_Medium_14"
                            android:textSize="@dimen/v_12dp"
                            android:layout_height="@dimen/v_18dp"
                            android:gravity="center_vertical"
                            android:id="@+id/row3_t1"
                            android:textColor="#717171"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/v_2dp">

                            <TextView
                                android:id="@+id/row_3_level"
                                style="@style/Font_SF_18"
                                android:textColor="#ff452b"
                                android:textSize="@dimen/v_20dp" />

                            <TextView
                                android:id="@+id/row_3_level_unit"
                                style="@style/Font_SF_18"
                                android:layout_marginLeft="1dp"
                                android:text="%"
                                android:textColor="#ff452b"
                                android:layout_gravity="bottom"
                                android:textSize="@dimen/v_12dp"
                                android:layout_marginBottom="1dp"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">



                </LinearLayout>





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_doctor_view"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginRight="@dimen/v_26dp"
                android:layout_marginLeft="@dimen/v_26dp">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e6e6e6"
                    android:layout_marginTop="@dimen/v_20dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/v_20dp"
                    android:layout_marginTop="@dimen/v_20dp">



                    <TextView
                        style="@style/Font_Bold_13"
                        android:textSize="@dimen/v_13dp"
                        android:textColor="#191919"
                        android:text="@string/diag_doctor_title"
                        android:id="@+id/t1"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="@dimen/v_16dp"
                        android:layout_height="@dimen/v_18dp"
                        android:layout_marginLeft="@dimen/v_2dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/emoji_bubble_s"
                        android:layout_toRightOf="@+id/t1"/>


                </RelativeLayout>

                <TextView
                    style="@style/Font_Regular_13"
                    android:textSize="@dimen/v_13dp"
                    android:id="@+id/row_doctor_ment"
                    android:textColor="#191919"
                    android:lineHeight="@dimen/v_23dp"
                    android:layout_marginTop="@dimen/v_5dp"/>


            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_24dp" />


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>

