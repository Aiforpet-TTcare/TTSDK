<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/Font_Bold_16"
        android:textSize="19dp"
        android:id="@+id/no_diagnosis_title"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/row_errorview_imageview1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal">


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        android:shape="ring"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/row_error_imageview1"
                            android:layout_width="120dp"
                            android:layout_height="120dp" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/frame_no_mini" />




                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:id="@+id/image_f_row_loading"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/round_radius_32_red"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/sample_no" />


                </RelativeLayout>


                <TextView
                    style="@style/Font_Regular_12"
                    android:textSize="12dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/rediagcamera_1"
                    android:textColor="#717171" />

                <TextView
                    style="@style/Font_Bold_15"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/rediagcamera_1"
                    android:layout_marginTop="2dp"
                    android:id="@+id/row_error_text1"
                    android:textColor="@color/color_191919" />


            </LinearLayout>
        </RelativeLayout>


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ico_tobe" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/row_errorview_imageview2"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal">



                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        android:shape="ring"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/row_error_imageview2"
                            android:layout_width="120dp"
                            android:layout_height="120dp" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/frame_ok_mini"
                            android:id="@+id/frame_ok_mini"/>




                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:id="@+id/image_s_row_loading"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/round_radius_32_blue"
                        android:visibility="gone"/>




                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/sample_yes"
                        android:id="@+id/sample_yes"/>


                </RelativeLayout>


                <TextView
                    style="@style/Font_Regular_12"
                    android:textSize="12dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/rediagcamera_2"
                    android:textColor="#717171" />

                <TextView
                    style="@style/Font_Bold_15"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:id="@+id/row_error_text2"
                    android:textColor="@color/color_191919" />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>





