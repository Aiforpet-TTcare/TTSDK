<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_guide_tooth1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_af000000"
    android:visibility="gone">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v_30dp"
            android:layout_marginRight="@dimen/v_30dp">

            <RelativeLayout
                android:layout_width="@dimen/v_48dp"
                android:layout_height="@dimen/v_48dp">

            </RelativeLayout>


            <TextView
                style="@style/Font_Medium_16"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/v_38dp"
                android:gravity="center_horizontal"
                android:lineHeight="@dimen/v_26dp"
                android:textSize="@dimen/v_19dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/v_20dp"
            android:layout_marginLeft="@dimen/v_20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/v_22dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/v_88dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/v_88dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/v_20dp"
                        android:layout_marginRight="@dimen/v_20dp"
                        android:background="@drawable/round_radius_17_e9e9e9">


                        <ImageView
                            android:layout_width="@dimen/v_23dp"
                            android:layout_height="@dimen/v_23dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/v_12dp"
                            android:layout_marginTop="@dimen/v_12dp"
                            android:layout_marginEnd="@dimen/v_12dp"
                            android:layout_marginBottom="@dimen/v_12dp"
                            android:id="@+id/guide1_check_img1"
                            android:background="@drawable/v4_common_check_check_on" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/v_22dp">

                            <ImageView
                                android:layout_width="@dimen/v_50dp"
                                android:layout_height="@dimen/v_50dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/select_tooth_1"
                                android:id="@+id/guide1_img1"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/v_10dp"
                                android:layout_gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >


                                    <TextView
                                        style="@style/Font_Bold_16"
                                        android:textSize="@dimen/v_16dp"
                                        android:textStyle="bold"
                                        android:layout_gravity="center_horizontal"
                                        android:text="@string/pop_tooth_2"
                                        android:textColor="@color/color_191919"/>


                                    <TextView
                                        style="@style/Font_Regular_13"
                                        android:textSize="@dimen/v_13dp"
                                        android:layout_marginLeft="@dimen/v_3dp"
                                        android:textColor="@color/color_898989"/>

                                </LinearLayout>


                                <TextView
                                    style="@style/Font_Regular_13"
                                    android:textSize="@dimen/v_13dp"
                                    android:text="@string/pop_tooth_3"
                                    android:textColor="@color/color_898989"
                                    android:layout_marginTop="@dimen/v_4dp"/>


                            </LinearLayout>





                        </LinearLayout>




                    </RelativeLayout>



                    <com.aiforpet.pet.util.LibraryLottieView
                        android:id="@+id/handloading1"
                        android:layout_width="@dimen/v_60dp"
                        android:layout_height="@dimen/v_60dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        app:lottie_autoPlay="true"
                        android:layout_marginRight="@dimen/v_8dp"/>

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/v_88dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/v_20dp"
                    android:layout_marginRight="@dimen/v_20dp"
                    android:layout_marginTop="@dimen/v_15dp">



                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/v_88dp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/v_15dp">



                </RelativeLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_80dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/v_15dp"
                android:layout_marginLeft="@dimen/v_20dp"
                android:layout_marginRight="@dimen/v_20dp"
                android:background="@drawable/round_radius_17_e9e9e9">




                <TextView
                    android:id="@+id/guide_pop_flash_txt"
                    style="@style/Font_Regular_15"
                    android:textSize="@dimen/v_15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/color_191919"
                    android:layout_marginLeft="@dimen/v_20dp"
                    android:lineHeight="@dimen/v_20dp" />


                <ImageView
                    android:id="@+id/pop_flash_select"
                    android:layout_width="@dimen/v_47dp"
                    android:layout_height="@dimen/v_28dp"
                    android:background="@drawable/v4_btn_toggle_on"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/v_20dp"
                    android:layout_marginLeft="@dimen/v_20dp"
                    android:layout_weight="0"/>



            </LinearLayout>




        </LinearLayout>


        <TextView
            android:id="@+id/guide_tooth1_txt"
            style="@style/Font_Bold_15"
            android:textSize="@dimen/v_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/v_20dp"
            android:layout_marginBottom="@dimen/v_60dp"
            android:background="@drawable/round_radius_15_ffffff"
            android:gravity="center"
            android:lineHeight="@dimen/v_23dp"
            android:paddingTop="@dimen/v_17dp"
            android:paddingBottom="@dimen/v_17dp"
            android:textColor="@color/color_191919"
            android:layout_marginLeft="@dimen/v_20dp"
            android:layout_marginRight="@dimen/v_20dp"/>






    </LinearLayout>



</RelativeLayout>