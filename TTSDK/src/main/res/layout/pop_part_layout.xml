<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_part_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:clickable="true"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/blank_view"/>
    <LinearLayout
        android:id="@+id/contentview_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pop_top_round"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="37dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="@drawable/pop_top"
            android:id="@+id/pop_top"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="34dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pop_ment_breed"
                android:layout_centerVertical="true"
                android:text="@string/pop_dog_part_title"
                android:textColor="@color/color_000000"
                android:textSize="20dp" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/round_bolder_e2e2e2"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:id="@+id/order_btn">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="9dp"
                        android:background="@drawable/icon_select_option"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="#191919"
                        android:text="@string/pop_breed_pop1"
                        android:id="@+id/order_txt"
                        android:layout_marginLeft="4dp"/>


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp">

            <EditText
                android:id="@+id/input_dog_part"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="20dp"
                android:hint="@string/pop_dog_part_hint"
                android:inputType="text"
                android:maxLength="14"
                android:textColorHint="#cecece"
                android:textSize="16dp"
                android:background="#ffffff"/>

            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/ico_search" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#f4f4f4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/breedlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:id="@+id/nodataview"
                android:layout_marginTop="71.8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pop_part_layout"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nodata_name"
                    android:textColor="#428ae0"
                    android:layout_marginLeft="4dp"/>


            </LinearLayout>


        </RelativeLayout>








    </LinearLayout>

</LinearLayout>
