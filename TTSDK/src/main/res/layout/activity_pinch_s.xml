<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="74dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true">

        <TextView
            style="@style/Font_SF_Bold_13"
            android:textSize="11dp"
            android:id="@+id/count_text"
            android:layout_centerInParent="true"
            android:text="1/2"
            android:textColor="#ffffff"/>


        <TextView
            style="@style/Font_Bold_13"
            android:textSize="12dp"
            android:layout_width="73.8dp"
            android:background="@drawable/round_ffffff"
            android:layout_height="32.4dp"
            android:gravity="center"
            android:textColor="#3e3e3e"
            android:text="@string/active_pet_weight_update"
            android:layout_marginRight="21.6dp"
            android:id="@+id/delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>





    <RelativeLayout
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="21.6dp"
        android:id="@+id/close">

        <ImageView
            android:layout_width="17.1dp"
            android:layout_height="17.1dp"
            android:background="@drawable/top_white_close"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21.6dp" />


    </RelativeLayout>






</RelativeLayout>