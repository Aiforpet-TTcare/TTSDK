<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/card_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:shape="ring"
        android:outlineAmbientShadowColor="#b5dedede"
        android:outlineSpotShadowColor="#b5dedede"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/row_1_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">


                <TextView
                    android:id="@+id/row_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#191919" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/round_30_d4d4d4"
                    android:layout_alignParentRight="true"
                    android:id="@+id/row_question"
                    android:layout_marginRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="@string/diags_result_row_2"
                        android:textColor="#717171"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="6dp"/>


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ico_tooltip_mini"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="12dp"/>



                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_image_right_row"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardBackgroundColor="#ffffff"
                        android:background="#ffffff"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/image_right_row"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/image_right_row_loading"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:visibility="visible"/>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="4dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8.2dp"
                        android:shape="ring"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp"
                        android:id="@+id/row_right_graph3">

                        <LinearLayout
                            android:layout_width="4dp"
                            android:layout_height="42dp"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/row_right_graph3_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#dcdcdc" />

                            <View
                                android:id="@+id/row_right_graph3_2"
                                android:layout_width="4dp"
                                android:layout_height="13dp"
                                android:layout_weight="0" />


                        </LinearLayout>




                    </com.google.android.material.card.MaterialCardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Font_Medium"
                            android:textSize="12dp"
                            android:text="@string/diags_result_row_4"
                            android:textColor="#717171" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/row_right_level"
                                style="@style/Font_Bold_18"
                                android:textColor="#ff452b"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/row_right_level_unit"
                                style="@style/Font_Bold_10"
                                android:layout_marginLeft="2dp"
                                android:text="%"
                                android:layout_marginBottom="1dp"
                                android:layout_gravity="bottom"/>

                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_image_left_row"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardBackgroundColor="#ffffff"
                        android:background="#ffffff"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardElevation="0dp">


                        <ImageView
                            android:id="@+id/image_left_row"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/image_left_row_loading"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"/>




                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="4dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8.2dp"
                        android:shape="ring"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp"
                        android:id="@+id/row_left_graph3">

                        <LinearLayout
                            android:layout_width="4dp"
                            android:layout_height="42dp"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/row_left_graph3_1"
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:background="#dcdcdc"
                                android:layout_weight="1"/>

                            <View
                                android:id="@+id/row_left_graph3_2"
                                android:layout_width="4dp"
                                android:layout_height="13dp"
                                android:layout_weight="0"
                                android:background="#dcdcdc" />


                        </LinearLayout>




                    </com.google.android.material.card.MaterialCardView>





                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Font_Medium"
                            android:textSize="12dp"
                            android:text="@string/diags_result_row_3"
                            android:textColor="#717171" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/row_left_level"
                                style="@style/Font_Bold_10"
                                android:text="@string/diags_result_row_3"
                                android:textColor="#ff452b"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/row_left_level_unit"
                                style="@style/Font_Bold_10"
                                android:layout_marginLeft="2dp"
                                android:text="%"
                                android:textColor="#ff452b"
                                android:layout_marginBottom="1dp"
                                android:layout_gravity="bottom"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_doctor_view"
                android:orientation="vertical"
                android:visibility="visible">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#e6e6e6"
                    android:layout_marginTop="24dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/t1"
                        style="@style/Font_Bold_13"
                        android:layout_centerVertical="true"
                        android:text="@string/diag_doctor_title"
                        android:textColor="#191919" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/emoji_bubble_s"
                        android:layout_toRightOf="@+id/t1"
                        android:layout_centerVertical="true"/>


                </RelativeLayout>

                <TextView
                    style="@style/Font_Regular_13"
                    android:id="@+id/row_doctor_ment"
                    android:textColor="#191919"
                    android:lineHeight="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"/>





            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

