<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_ffffff">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/color_ffffff"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/card_row1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="26dp">


                <TextView
                    android:id="@+id/row_title"
                    style="@style/Font_Bold_16"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:textColor="#191919"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_vertical">



                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_image_right_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="16dp"
                            android:layout_margin="1dp"
                            app:cardElevation="0dp"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/image_select_row"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>

                        </com.google.android.material.card.MaterialCardView>


                        <View
                            android:id="@+id/line_right_ff8400"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/v4_line_16_ff8400"
                            android:visibility="gone" />




                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Font_Medium_14"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:id="@+id/position"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/position_level"
                            style="@style/Font_Regular_13"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="6dp"
                            android:textSize="13dp" />


                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">




            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="29dp" />


        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>




</LinearLayout>

