<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t2_1"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/color_191919"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:letterSpacing="-0.04" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:textColor="@color/color_191919"
            android:text="@string/guide_joint_14"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:lineHeight="26dp"
            android:letterSpacing="-0.04"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/joint2_img1"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:letterSpacing="-0.04" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t2_2"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/color_191919"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:letterSpacing="-0.04" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:textColor="@color/color_191919"
            android:text="@string/guide_joint_16"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:lineHeight="26dp"
            android:letterSpacing="-0.04" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/joint2_img2"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t2_3"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/color_191919"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:letterSpacing="-0.04" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:textColor="@color/color_191919"
            android:text="@string/guide_joint_18"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:lineHeight="26dp"
            android:letterSpacing="-0.04" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:background="@drawable/emoji_typ1"
                android:layout_gravity="center_vertical"/>

            <TextView
                style="@style/Font_Bold_14"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_191919"
                android:text="@string/guide_joint_19"
                android:layout_marginLeft="4dp"
                android:lineHeight="26dp"
                android:letterSpacing="-0.04" />



        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/joint2_img3"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp">


            <ImageView
                android:layout_width="17dp"
                android:layout_height="12dp"
                android:background="@drawable/emoji_typ2"
                android:layout_gravity="center_vertical"/>

            <TextView
                style="@style/Font_Bold_14"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_191919"
                android:text="@string/guide_joint_20"
                android:layout_marginLeft="4dp"
                android:lineHeight="26dp"
                android:letterSpacing="-0.04" />



        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/joint2_img4"/>





        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="40dp"
            android:background="@color/color_f4f4f4"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/color_191919"
            android:text="@string/guide_joint_11"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:letterSpacing="-0.04" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:textColor="@color/color_191919"
            android:text="@string/guide_joint_12"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:lineHeight="26dp"
            android:letterSpacing="-0.04" />




        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="40dp"/>


    </LinearLayout>






</androidx.core.widget.NestedScrollView>
