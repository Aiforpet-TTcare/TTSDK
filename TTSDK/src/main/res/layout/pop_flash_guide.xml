<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_flash_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="@color/color_af000000"
    android:visibility="gone">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/color_ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Font_Bold_18"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/auto_camera_13"
                android:textColor="#191919"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/flash_guide_skin"
                android:visibility="gone">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/noti_type_1"/>

                <TextView
                    style="@style/Font_Regular_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="#717171"
                    android:lineHeight="22dp"
                    android:id="@+id/flash_guide_skin_txt"
                    android:text="@string/auto_camera_15"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_radius_17_e9e9e9">


                <TextView
                    style="@style/Font_Regular_13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lineHeight="20dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="7sp"
                    android:id="@+id/flash_guide_txt"
                    android:layout_marginLeft="20dp"/>



                <com.google.android.material.card.MaterialCardView
                    android:layout_width="47dp"
                    android:layout_height="28dp"
                    android:background="@drawable/v4_btn_toggle_on"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0"
                    app:cardCornerRadius="30dp"
                    android:id="@+id/flash_guide_toggle"/>


            </LinearLayout>


            <TextView
                style="@style/Font_Regular_11"
                android:lineHeight="18dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_717171"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/auto_camera_16"
                android:layout_marginTop="10dp"/>



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:id="@+id/flash_confirm"
                app:cardBackgroundColor="@color/color_333344"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="26dp">
                <TextView
                    style="@style/Font_Bold_16"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:text="@string/auto_camera_17"/>



            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>





</RelativeLayout>
