<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#af000000"
    android:id="@+id/activity_guide_eye4"
    android:visibility="gone">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59.4dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_radius_15_ffffff"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="27dp"
                android:orientation="vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp">

                <TextView
                    style="@style/Font_Bold_15"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:textColor="@color/color_191919"
                    android:lineHeight="18.9dp"
                    android:id="@+id/guide_eye4_1_txt" />

                <TextView
                    style="@style/Font_Regular_13"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:textColor="@color/color_191919"
                    android:lineHeight="18.9dp"
                    android:id="@+id/guide_eye4_2_txt" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="171dp">

            <RelativeLayout
                android:layout_width="127.8dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginTop="6.3dp"
                android:background="@drawable/round_radius_20_ffffff">

                <TextView
                    style="@style/Font_Bold_15"
                    android:textSize="14dp"
                    android:textColor="@color/color_000000"
                    android:text="@string/eye_check_1"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14.4dp"/>

                <View
                    android:layout_width="24.3dp"
                    android:layout_height="1dp" />
                <TextView
                    style="@style/Font_Bold_15"
                    android:textSize="14dp"
                    android:textColor="#b8b8b8"
                    android:text="@string/eye_check_2"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14.4dp"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="127.8dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.aiforpet.pet.util.LibraryLottieView
                    android:id="@+id/handloading4_eye"
                    android:layout_width="54dp"
                    android:layout_height="54.63dp"
                    app:lottie_imageAssetsFolder="images"
                    app:lottie_assetFileName="han.json"
                    app:lottie_autoPlay="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12.6dp"/>

            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>




</RelativeLayout>