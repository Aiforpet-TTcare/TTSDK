<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        style="@style/Font_Bold_14"
        android:textColor="@color/color_191919"
        android:id="@+id/row_title"
        android:layout_width="match_parent"
        android:layout_marginTop="22.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="9dp"/>


    <TextView
        style="@style/Font_Regular_13"
        android:textColor="@color/color_535353"
        android:id="@+id/row_contents1"
        android:layout_width="match_parent"
        android:layout_marginTop="22.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="9dp"
        android:lineHeight="25dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_ececec"
        android:layout_marginTop="22.5dp"
        android:layout_marginBottom="22.5dp"
        android:id="@+id/middle_view"
        android:visibility="gone"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"/>


    <TextView
        style="@style/Font_Regular_13"
        android:textColor="@color/color_535353"
        android:id="@+id/row_contents2"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="9dp"
        android:visibility="gone"
        android:lineHeight="25dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/color_f4f4f4"
        android:id="@+id/last_view"
        android:layout_marginTop="27dp"/>





</LinearLayout>