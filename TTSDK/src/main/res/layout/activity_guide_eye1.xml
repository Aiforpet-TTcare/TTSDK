<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_guide_eye1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#af000000"
    android:visibility="gone">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">



        </RelativeLayout>

        <TextView
            style="@style/Font_Medium_16"
            android:textSize="19dp"
            android:lineHeight="24dp"
            android:textColor="#191919"
            android:layout_height="58dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:id="@+id/g1_1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="83dp"
                        android:layout_height="77dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/common_check_eye_1_cat"
                        android:id="@+id/guide1_img1"/>

                    <TextView
                        style="@style/Font_Medium_16"
                        android:textSize="13dp"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/pop_eye_2"
                        android:textColor="#ffffff"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="17dp">


                    <ImageView
                        android:layout_width="83dp"
                        android:layout_height="77dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/common_check_eye_2_cat"
                        android:id="@+id/guide1_img2"/>

                    <TextView
                        style="@style/Font_Medium_16"
                        android:textSize="13dp"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/pop_eye_3"
                        android:textColor="#ffffff"/>


                </LinearLayout>


            </LinearLayout>



            <TextView
                style="@style/Font_Bold_15"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/g1_1"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/color_191919"
                android:id="@+id/guide_eye1_txt"
                android:background="@drawable/round_radius_15_ffffff"/>

            <RelativeLayout
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.aiforpet.pet.util.LibraryLottieView
                    android:id="@+id/handloading1_eye"
                    android:layout_width="60dp"
                    android:layout_height="60.7dp"
                    app:lottie_imageAssetsFolder="images"
                    app:lottie_assetFileName="han.json"
                    app:lottie_autoPlay="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="42dp"/>

            </RelativeLayout>

        </RelativeLayout>















    </LinearLayout>




</RelativeLayout>
