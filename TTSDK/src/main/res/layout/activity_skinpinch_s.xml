<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true">

        <TextView
            style="@style/Font_SF_Bold_13"
            android:textSize="10dp"
            android:id="@+id/count_text"
            android:layout_centerInParent="true"
            android:text="1/2"
            android:textColor="#ffffff"/>


        <TextView
            style="@style/Font_Bold_12"
            android:textSize="11dp"
            android:layout_width="73.8dp"
            android:background="@drawable/round_ffffff"
            android:layout_height="27dp"
            android:gravity="center"
            android:textColor="#3e3e3e"
            android:text="@string/active_pet_weight_update"
            android:layout_marginRight="18dp"
            android:id="@+id/delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="43.2dp"
        android:layout_height="43.2dp"
        android:layout_marginTop="18dp"
        android:id="@+id/close">

        <ImageView
            android:layout_width="16.2dp"
            android:layout_height="16.2dp"
            android:background="@drawable/top_white_close"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp" />


    </RelativeLayout>






</RelativeLayout>