<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="21.6dp"
            android:id="@+id/close">

            <ImageView
                android:layout_width="17.1dp"
                android:layout_height="17.1dp"
                android:background="@drawable/top_white_close"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21.6dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50.4dp">

            <TextView
                style="@style/Font_Medium"
                android:textSize="12dp"
                android:id="@+id/detail_time"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"/>


        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pager"
            android:layout_weight="1"
            android:layout_marginTop="12.6dp"
            android:layout_marginBottom="12.6dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="108dp">

            <TextView
                style="@style/Font_SF_Bold_13"
                android:textSize="12dp"
                android:id="@+id/count_text"
                android:layout_centerHorizontal="true"
                android:text="1/2"
                android:textColor="#ffffff"/>


        </RelativeLayout>


    </LinearLayout>
















</RelativeLayout>