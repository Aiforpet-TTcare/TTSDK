<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_eye_selectview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_af000000"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/v_30dp"
        android:layout_marginRight="@dimen/v_30dp"
        android:background="@drawable/round_radius_20_ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="@dimen/v_48dp"
                android:layout_height="@dimen/v_48dp"
                android:layout_marginRight="@dimen/v_12dp"
                android:layout_alignParentRight="true"
                android:id="@+id/pop_eye_select_no">

                <ImageView
                    android:layout_width="@dimen/v_19dp"
                    android:layout_height="@dimen/v_19dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/v_25dp"
                    android:layout_marginRight="@dimen/v_12dp"
                    android:background="@drawable/top_close" />

            </RelativeLayout>


            <TextView
                style="@style/Font_Medium_16"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/v_38dp"
                android:gravity="center_horizontal"
                android:lineHeight="@dimen/v_26dp"
                android:text="@string/pop_eye_1"
                android:textColor="#191919"
                android:textSize="@dimen/v_19dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"   >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_148dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/v_22dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/v_148dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/v_20dp"
                    android:id="@+id/select_eye1"
                    android:background="@drawable/round_radius_17_f2f2f2">


                    <ImageView
                        android:id="@+id/select_eye1_check"
                        android:layout_width="@dimen/v_23dp"
                        android:layout_height="@dimen/v_23dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/v_12dp"
                        android:layout_marginTop="@dimen/v_12dp"
                        android:layout_marginEnd="@dimen/v_12dp"
                        android:layout_marginBottom="@dimen/v_12dp"
                        android:background="@drawable/v4_common_check_check_off" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/v_23dp">

                        <ImageView
                            android:layout_width="@dimen/v_50dp"
                            android:layout_height="@dimen/v_50dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/v4_g_dog_r"
                            android:id="@+id/select_eye_r_img"/>



                        <TextView
                            style="@style/Font_Bold_16"
                            android:textSize="@dimen/v_16dp"
                            android:layout_marginTop="@dimen/v_10dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/pop_eye_2"
                            android:textColor="@color/color_191919"/>


                        <TextView
                            style="@style/Font_Regular_13"
                            android:textSize="@dimen/v_13dp"
                            android:layout_marginTop="@dimen/v_2dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/v4_pop_eye_5"
                            android:id="@+id/select_eye_r_txt"
                            android:textColor="@color/color_898989"/>

                    </LinearLayout>




                </RelativeLayout>

                <View
                    android:layout_width="@dimen/v_15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/v_148dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/v_20dp"
                    android:id="@+id/select_eye2"
                    android:background="@drawable/round_radius_17_f2f2f2">


                    <ImageView
                        android:layout_width="@dimen/v_23dp"
                        android:layout_height="@dimen/v_23dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/v4_common_check_check_off"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/v_12dp"
                        android:id="@+id/select_eye2_check"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/v_23dp">

                        <ImageView
                            android:layout_width="@dimen/v_50dp"
                            android:layout_height="@dimen/v_50dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/v4_g_dog_l"
                            android:id="@+id/select_eye_l_img"/>



                        <TextView
                            style="@style/Font_Bold_16"
                            android:textSize="@dimen/v_16dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/v4_pop_eye_3"
                            android:textColor="@color/color_191919"/>


                        <TextView
                            style="@style/Font_Regular_13"
                            android:textSize="@dimen/v_13dp"
                            android:layout_marginTop="@dimen/v_2dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/v4_pop_eye_5"
                            android:id="@+id/select_eye_l_txt"
                            android:textColor="@color/color_898989"/>

                    </LinearLayout>




                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_80dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/v_15dp"
                android:layout_marginLeft="@dimen/v_20dp"
                android:layout_marginRight="@dimen/v_20dp"
                android:background="@drawable/round_radius_17_e9e9e9">


                <TextView
                    style="@style/Font_Regular_15"
                    android:textSize="@dimen/v_15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/color_191919"
                    android:id="@+id/pop_flash_txt"
                    android:layout_marginLeft="@dimen/v_20dp"
                    android:lineHeight="@dimen/v_20dp"/>


                <ImageView
                    android:layout_width="@dimen/v_47dp"
                    android:layout_height="@dimen/v_28dp"
                    android:background="@drawable/v4_btn_toggle_off"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/v_20dp"
                    android:layout_marginLeft="@dimen/v_20dp"
                    android:layout_weight="0"
                    android:id="@+id/pop_flash_select"/>


            </LinearLayout>


            <TextView
                style="@style/Font_Regular_13"
                android:textSize="@dimen/v_13dp"
                android:lineHeight="@dimen/v_22dp"
                android:textColor="@color/color_717171"
                android:layout_marginLeft="@dimen/v_24dp"
                android:layout_marginRight="@dimen/v_24dp"
                android:text="@string/v4_pop_eye_7"
                android:layout_marginTop="@dimen/v_10dp"/>



            <TextView
                style="@style/Font_Bold_15"
                android:textSize="@dimen/v_15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_48dp"
                android:layout_marginLeft="@dimen/v_20dp"
                android:layout_marginRight="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_15dp"
                android:textColor="#ffffff"
                android:text="@string/v4_pop_eye_8"
                android:background="@drawable/round_radius_10_d3d3d3"
                android:id="@+id/pop_eye_select_yes"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_30dp" />







    </LinearLayout>




</RelativeLayout>
