<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#af000000"
    android:id="@+id/activity_guide_skin3"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/g3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="45dp">


                <LinearLayout
                    android:layout_width="41.4dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="41.4dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="7.2dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="41.4dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="7.2dp">


                </LinearLayout>
                <LinearLayout
                    android:layout_width="41.4dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="7.2dp">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="57.6dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="57.6dp"
                        android:layout_height="24.3dp" >
                        <ImageView
                            android:layout_width="57.6dp"
                            android:layout_height="24.3dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bubble_edit"
                            android:visibility="visible"/>
                    </RelativeLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="41.4dp"
                        android:layout_height="41.4dp"
                        android:shape="ring"
                        android:layout_gravity="center_horizontal"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="41.4dp"
                            android:layout_height="41.4dp"
                            android:background="@drawable/common_check_again"/>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


            </LinearLayout>


            <TextView
                style="@style/Font_Bold_15"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:layout_above="@+id/g3"
                android:layout_marginBottom="27dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:gravity="center"
                android:textColor="@color/color_191919"
                android:id="@+id/guide_skin3_txt"
                android:lineHeight="19dp"
                android:background="@drawable/round_radius_15_ffffff"/>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="19.8dp"
                android:layout_centerHorizontal="true">

                <com.aiforpet.pet.util.LibraryLottieView
                    android:id="@+id/handloading3_skin"
                    android:layout_width="54dp"
                    android:layout_height="54.63dp"
                    app:lottie_imageAssetsFolder="images"
                    app:lottie_assetFileName="han.json"
                    app:lottie_autoPlay="true"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>






        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="171dp">


        </RelativeLayout>



    </LinearLayout>




</RelativeLayout>
