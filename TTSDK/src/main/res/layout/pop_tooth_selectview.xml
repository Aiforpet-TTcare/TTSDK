<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_tooth_selectview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_af000000"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/round_radius_20_ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:id="@+id/pop_tooth_select_no">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/top_close" />

            </RelativeLayout>


            <TextView
                style="@style/Font_Medium_16"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="38dp"
                android:gravity="center_horizontal"
                android:lineHeight="26dp"
                android:textStyle="bold"
                android:text="@string/pop_eye_1"
                android:textColor="#191919"
                android:textSize="19dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"   >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="22dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/select_tooth1"
                    android:background="@drawable/round_radius_17_f2f2f2">


                    <ImageView
                        android:id="@+id/select_tooth1_check"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/v4_common_check_check_off" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/select_tooth_1"
                            android:id="@+id/select_img_tooth1"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >


                                <TextView
                                    style="@style/Font_Bold_16"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/pop_tooth_2"
                                    android:textColor="@color/color_191919"/>


                                <TextView
                                    style="@style/Font_Regular_13"
                                    android:textSize="13dp"
                                    android:layout_marginLeft="3dp"
                                    android:textColor="@color/color_898989"/>

                            </LinearLayout>


                            <TextView
                                style="@style/Font_Regular_13"
                                android:textSize="13dp"
                                android:text="@string/pop_tooth_3"
                                android:textColor="@color/color_898989"
                                android:layout_marginTop="4dp"/>


                        </LinearLayout>





                    </LinearLayout>




                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/select_tooth2"
                    android:background="@drawable/round_radius_17_f2f2f2">


                    <ImageView
                        android:id="@+id/select_tooth2_check"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/v4_common_check_check_off" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/select_tooth_2"
                            android:id="@+id/select_img_tooth2"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >


                                <TextView
                                    style="@style/Font_Bold_16"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/pop_tooth_4"
                                    android:textColor="@color/color_191919"/>


                                <TextView
                                    style="@style/Font_Regular_13"
                                    android:textSize="13dp"
                                    android:layout_marginLeft="3dp"
                                    android:textColor="@color/color_898989"
                                    android:text="@string/pop_tooth_5"
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/select_tooth2_subtxt"/>

                            </LinearLayout>


                            <TextView
                                style="@style/Font_Regular_13"
                                android:textSize="13dp"
                                android:text="@string/pop_tooth_6"
                                android:textColor="@color/color_898989"
                                android:layout_marginTop="4dp"/>


                        </LinearLayout>





                    </LinearLayout>




                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/select_tooth3"
                    android:background="@drawable/round_radius_17_f2f2f2">


                    <ImageView
                        android:id="@+id/select_tooth3_check"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/v4_common_check_check_off" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/select_tooth_3"
                            android:id="@+id/select_img_tooth3"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >


                                <TextView
                                    style="@style/Font_Bold_16"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/pop_tooth_7"
                                    android:textColor="@color/color_191919"/>


                                <TextView
                                    style="@style/Font_Regular_13"
                                    android:textSize="13dp"
                                    android:layout_marginLeft="3dp"
                                    android:textColor="@color/color_898989"
                                    android:text="@string/pop_tooth_5"
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/select_tooth3_subtxt"/>

                            </LinearLayout>


                            <TextView
                                style="@style/Font_Regular_13"
                                android:textSize="13dp"
                                android:text="@string/pop_tooth_6"
                                android:textColor="@color/color_898989"
                                android:layout_marginTop="4dp"/>


                        </LinearLayout>





                    </LinearLayout>




                </RelativeLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_radius_17_e9e9e9">


                <TextView
                    style="@style/Font_Regular_15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/color_191919"
                    android:id="@+id/pop_flash_txt"
                    android:layout_marginLeft="20dp"
                    android:lineHeight="20dp"/>


                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="28dp"
                    android:background="@drawable/v4_btn_toggle_off"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0"
                    android:id="@+id/pop_flash_select"/>


            </LinearLayout>


            <TextView
                style="@style/Font_Regular_13"
                android:lineHeight="22dp"
                android:textColor="@color/color_717171"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/v4_pop_eye_7"
                android:layout_marginTop="10dp"/>



            <TextView
                style="@style/Font_Bold_15"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:text="@string/v4_pop_eye_8"
                android:background="@drawable/round_radius_10_d3d3d3"
                android:id="@+id/pop_tooth_select_yes"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />







    </LinearLayout>




</RelativeLayout>
